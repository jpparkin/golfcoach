<h1>Listing lessons</h1>

<table>
  <tr>
    <th>Notes</th>
    <th>Coach</th>
    <th>Student</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lessons.each do |lesson| %>
  <tr>
    <td><%= lesson.notes %></td>
    <td><%= lesson.coach_id %></td>
    <td><%= lesson.student_id %></td>
    <td><%= link_to 'Show', coach_student_lesson_path(@coach, @student, lesson) %></td>
    <td><%= link_to 'Edit', edit_coach_student_lesson_path(@coach, @student, lesson) %></td>
    <td><%= link_to 'Destroy', coach_student_lesson_path(@coach, @student, lesson), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

