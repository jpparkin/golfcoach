<h2>Edit Notes</h2>

<%= form_for([@coach, @student, @lesson]) do |f| %>
	<% if @lesson.errors.any? %>
		<div id="error_explanation">
	      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

	      <ul>
	      <% @lesson.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
		</div>
	<% end %>
	
	<div class="field">
	  <%= f.label :notes %><br />
	  <%= f.text_area :notes, :cols => 80, :rows => 15 %>
	</div>
	
	<div class="actions">
	    <%= f.submit %>
	</div>
<% end %>

